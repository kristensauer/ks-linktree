---
// Props: images: Array<{ src: string; alt?: string }>

import { Image } from 'astro:assets';
import FF from '@assets/images/FF.png';
import Stickers from '@assets/images/Stickers.png';
import Symposium from '@assets/images/Symposium.png';
---

<div class="carousel" aria-label="Image carousel">
  <div class="carousel-track">
 
        <figure class="carousel-item">
          <Image src={FF} alt="Fighting Fascism Flyer" loading="lazy" />
        </figure>
        <figure class="carousel-item">
          <Image src={Stickers} alt="Three SUNY New Paltz Art History Department Stickers" loading="lazy" />
        </figure>
        <figure class="carousel-item">
          <Image src={Symposium} alt="SUNY New Paltz Undergraduate Art History Symposium 2025 Sticker" loading="lazy" />
        </figure>
   
  </div>
  <div class="carousel-controls">
    <button class="ctrl prev" aria-label="Previous" onclick="this.closest('.carousel').querySelector('.carousel-track').scrollBy({left: -window.innerWidth * 0.8, behavior: 'smooth'})">‹</button>
    <button class="ctrl next" aria-label="Next" onclick="this.closest('.carousel').querySelector('.carousel-track').scrollBy({left: window.innerWidth * 0.8, behavior: 'smooth'})">›</button>
  </div>
</div>

<style>
  .carousel {
    position: relative;
    width: min(100%, 1200px);
    margin: 2rem auto;
  }
  .carousel-track {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 100%;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }
  .carousel-track::-webkit-scrollbar {
    height: 8px;
  }
  .carousel-track::-webkit-scrollbar-thumb {
    background: var(--color-accent);
    border-radius: 8px;
  }
  .carousel-item {
    scroll-snap-align: center;
    margin: 0;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: var(--color-box);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: clamp(320px, 60vh, 720px);
    padding: 1rem;
  }
  .carousel-item img {
    display: block;
    max-width: 90vw;
    max-height: 90vh;
    width: auto;
    height: auto;
    object-fit: contain;
  }
  .carousel-controls {
    position: absolute;
    inset: 0;
    pointer-events: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 0.5rem;
  }
  .ctrl {
    pointer-events: auto;
    background: var(--color-accent);
    color: var(--color-text);
    border: none;
    border-radius: 999px;
    width: 40px;
    height: 40px;
    font-size: 1.5rem;
    display: grid;
    place-items: center;
    cursor: pointer;
    transition: transform 0.2s ease;
  }
  .ctrl:hover { 
    transform: scale(1.06); 
    background-color: var(--color-header);
  }

  @media (max-width: 768px) {
    .carousel-track {
      grid-auto-columns: 100%;
    }
  }
</style>
