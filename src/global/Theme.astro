---
// we can import fonts here, after installing them via Fontsource
// see https://fontsource.org/docs/installation for instructions
import '@fontsource/freeman';
---

<style is:global>
  :root {
    --color-background: #9E9B92;
    --color-header: #FFFFFF;
    --color-text: #0F0D0E;
    --color-box: #D9D9D9;
    --color-accent: #69D9ED;

    --font-body: "Freeman", sans-serif;
    --font-headings: "Freeman", sans-serif;

    font-size: 16px;

    --size-page-width: 800px;
    --size-page-padding: 1rem;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-text);
    font-family: var(--font-body);
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--color-header);
  }

  p {
    color: var(--color-text);
  }
</style>
