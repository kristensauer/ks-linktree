---
import Layout from "@layouts/Layout.astro";
import SampleComponent from "@components/SampleComponent.astro";
import Container from "@components/Container.astro";
import { Content as SampleMarkdown } from "@content/sample-markdown.md";
import { Image } from "astro:assets";
import TwoColumns from "@components/TwoColumns.astro";
import portfolio from "@components/portfolio.astro";
import resume from "@components/resume.astro";
import contact from "@components/contact.astro";
---

<Layout title="Astro Starter">
<header>
  <TwoColumns>
    <div slot="left" class="hero-image-container">
      <img src="src/assets/images/kristensauer-sp25.png" alt="Kristen Sauer headshot" />
    </div>

    <div slot="right" class="hero-overlay">
      <h1 class="hero-title">Kristen Sauer</h1>
      <div class="nav-buttons-container">
        <a class="nav-btn" href="/portfolio">Portfolio</a>
        <a class="nav-btn" href="/resume">Resume</a>
        <a class="nav-btn" href="/contact">Contact</a>
      </div>
    </div>
  </TwoColumns>
</header>
  <main>
    <div class="footer-meta">
      &copy; 2025 Kristen Sauer. All rights reserved.
    </div>
  </main>
</Layout>
<style>
  header {
    height: 100vh;
    min-height: 560px;
  }

  header .two-columns {
    height: 100%;
    align-items: stretch;
  }

  .hero-image-container {
    position: relative;
    text-align: center;
    height: 100%;
    width: 100%;
    display: block;
  }

  .hero-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-overlay {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
  }

  .hero-title {
    font-size: 5rem;
    margin-bottom: 0.5rem;
    text-transform: capitalize;
  }

  .nav-buttons-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
  }

  .nav-btn {
    background-color: var(--color-box, #D9D9D9);
    color: var(--color-text, #0F0D0E);
    padding: 0.6rem 1.2rem;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.2s ease, transform 0.12s ease;
    display: inline-block;
    width: 100%;
    max-width: 280px;
    text-align: center;
  }

  .nav-btn:hover {
    background-color: var(--color-accent);
  }

  .footer-meta {
    text-align: center;
    padding: 1rem;
    font-size: 0.9rem;
  }

  /* Mobile fallback: don't force header viewport height on small screens */
  @media (max-width: 800px) {
    header {
      height: auto;
      min-height: 0;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .hero-title {
      font-size: 2.25rem;
      text-align: center;
    }

    .hero-overlay {
      position: static;
      transform: none;
      left: auto;
      top: auto;
      padding: 1rem;
      align-items: center;
      text-align: center;
    }
  }
</style>