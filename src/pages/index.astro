<script>
  // Type hints to satisfy TS in Astro
  /** @type {Window & typeof globalThis & { confetti?: (opts?: any) => void }} */
  const _w = window;
  // Lightweight confetti using canvas-confetti CDN or fallback
  (function(){
    /** @param {() => void} cb */
    function loadConfetti(cb){
      // @ts-ignore - confetti injected by CDN
      if (_w.confetti) return cb();
      const s = document.createElement('script');
      s.src = 'https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js';
      s.onload = cb;
      document.head.appendChild(s);
    }

    /** @type {(el: HTMLElement) => void} */
    const fireConfettiFromElement = (el) => {
      const rect = el.getBoundingClientRect();
      const x = (rect.left + rect.width/2) / window.innerWidth;
      const y = (rect.top + rect.height/2) / window.innerHeight;
      // @ts-ignore - confetti injected by CDN
      _w.confetti && _w.confetti({
        particleCount: 80,
        startVelocity: 35,
        spread: 60,
        origin: { x, y },
        ticks: 200
      });
    }

    function attachHandlers(){
      document.querySelectorAll('.nav-btn').forEach((a)=>{
        a.addEventListener('click', (e)=>{
          // Show confetti first, then navigate programmatically
          e.preventDefault();
          const href = a.getAttribute('href');
          loadConfetti(()=>fireConfettiFromElement(a));
          setTimeout(()=>{
            if (href) window.location.href = href;
          }, 1200);
        });
      });
    }

    // Ensure DOM ready
    if (document.readyState === 'loading'){
      document.addEventListener('DOMContentLoaded', attachHandlers);
    } else {
      attachHandlers();
    }
  })();
</script>